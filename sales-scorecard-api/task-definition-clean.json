{
  "family": "sales-scorecard-task-final",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::221855463690:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "sales-scorecard-api",
      "image": "221855463690.dkr.ecr.eu-north-1.amazonaws.com/sales-scorecard-api:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "AWS_REGION",
          "value": "eu-north-1"
        },
        {
          "name": "DATABASE_URL",
          "value": "postgresql://postgres:SalesScorecard2024!@sales-scorecard-db.cvmwi48oaptu.eu-north-1.rds.amazonaws.com:5432/postgres"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "JWT_SECRET",
          "value": "your-super-secret-jwt-key-change-this-in-production"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/sales-scorecard",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
